<model
    xmlns="http://namespaces.plone.org/supermodel/schema"
    xmlns:security="http://namespaces.plone.org/supermodel/security"
    xmlns:form="http://namespaces.plone.org/supermodel/form"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="memo.contenttypes">
  <schema>
    <field name="minions" type="z3c.relationfield.schema.RelationList">
      <description/>
      <required>False</required>
      <title>Minions</title>
      <value_type type="z3c.relationfield.schema.RelationChoice">
        <title i18n:translate="">Relation Choice</title>
        <portal_type>
          <element>Library</element>
        </portal_type>
      </value_type>
    </field>


    <field name="type" type="zope.schema.Choice">
      <description i18n:translate="">Select the type of the manuscript</description>
      <required>False</required>
      <title i18n:translate="">Type</title>
      <vocabulary>memo.contenttypes.TestVocab</vocabulary>
    </field>
    <field name="signature" type="zope.schema.TextLine">
        <description></description>
        <title>Signature</title>
        <required>True</required>
    </field>
    <field name="old_signature" type="zope.schema.TextLine">
        <description></description>
        <title>Old signature</title>
        <required>False</required>
    </field>

    <field name="origin" type="zope.schema.TextLine">
        <description></description>
        <title>Origin</title>
        <required>False</required>
    </field>
    <field name="history" type="plone.app.textfield.RichText">
        <description></description>
        <title>History</title>
        <required>False</required>
    </field>
    <field name="material_description" type="zope.schema.TextLine">
        <description></description>
        <title>Material description</title>
        <required>False</required>
    </field>
     <field name="folio" type="zope.schema.TextLine">
        <description></description>
        <title>Folio</title>
        <required>False</required>
    </field>
    <field name="literature" type="zope.schema.FrozenSet">
      <description/>
      <required>False</required>
      <title i18n:translate="">Literature</title>
      <value_type type="zope.schema.TextLine">
        <title/>
      </value_type>
    </field>

    <field name="link" type="zope.schema.FrozenSet">
      <description/>
      <required>False</required>
      <title i18n:translate="">Links</title>
      <value_type type="zope.schema.URI">
        <title/>
      </value_type>
    </field>
    <fieldset
        name="dating_fieldset"
        label="Dating"
        description="Set the datefield as string, the upper and lower bound as date">
        <field name="date" type="zope.schema.TextLine">
            <description>Can be something like '12th cent.' or 'around 1500'</description>
            <title>Date</title>
            <required>False</required>
        </field>
        <field name="date_from" type="zope.schema.Date">
            <description>The lower bound of the date</description>
            <title>Date from</title>
            <required>False</required>
        </field>
         <field name="date_to" type="zope.schema.Date">
            <description>The upper bound of the date</description>
            <title>Date to</title>
            <required>False</required>
        </field>
    </fieldset>

  </schema>
</model>
